/* The Order is important don't change it unless you know what you're doing */

QTask[current="true"] {
border: 1px solid blue;
}

QTask[current="false"] {
border-style: none;
}

QTask[done="false"] { background-color: #eec900; }
QTask[late="true"] { background-color: #cd3700; }
QTask[done="true"] { background-color: #66cd00; }

QTask QLabelEdit:read-only {
border: none;
}
QTask QLabelEdit:hover {
border-style: 1px;
border-radius: 5px;
}

QTask, QTask QCheckBox, QTask QToolButton, QTask QMenu {
border-style: outset;
border-width: 1px;
border-color: beige;
border-radius: 10px;
}

QToolButton#closeButton {
color: red;
}
